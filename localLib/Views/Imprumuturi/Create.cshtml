@model localLib.Models.Imprumut

@{
    ViewData["Title"] = "Creare Împrumut";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Adaugă Împrumut Nou</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-3">
                <div class="card-header">Informații Student</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Nume" class="control-label"></label>
                        <input asp-for="Nume" class="form-control" />
                        <span asp-validation-for="Nume" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Prenume" class="control-label"></label>
                        <input asp-for="Prenume" class="form-control" />
                        <span asp-validation-for="Prenume" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Grupa" class="control-label"></label>
                        <input asp-for="Grupa" class="form-control" />
                        <span asp-validation-for="Grupa" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">Detalii Împrumut</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="CarteId" class="control-label">Carte</label>
                        <select asp-for="CarteId" class="form-control" asp-items="ViewBag.CarteId">
                            <option value="">-- Selectați Cartea --</option>
                        </select>
                        <span asp-validation-for="CarteId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DataImprumut" class="control-label"></label>
                        <input asp-for="DataImprumut" class="form-control" type="date"
                            value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DataImprumut" class="text-danger"></span>
                    </div>
                    <div class="alert alert-info">
                        <small><i class="fas fa-info-circle"></i> Data returnării va fi setată când cartea este
                            returnată.</small>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anulează</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Ghid completare</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-user text-info"></i> <strong>Nume:</strong> Introduceți numele complet al studentului</li>
                    <li><i class="fas fa-user text-info"></i> <strong>Prenume:</strong> Introduceți prenumele complet al studentului</li>
                    <li><i class="fas fa-users text-info"></i> <strong>Grupa:</strong> Specificați grupa studentului (ex: CTI-1, IS-2)</li>
                    <li><i class="fas fa-book text-info"></i> <strong>Carte:</strong> Selectați cartea care va fi împrumutată</li>
                    <li><i class="fas fa-calendar text-info"></i> <strong>Data împrumutului:</strong> Selectați data când se face împrumutul</li>
                </ul>
                <div class="alert alert-warning mt-3">
                    <small><i class="fas fa-exclamation-triangle"></i> <strong>Notă:</strong> Data returnării va fi completată automat când studentul returnează cartea.</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}