@model localLib.Models.Categorie

@{
    ViewData["Title"] = "Creare Categorie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Adaugă Categorie Nouă</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-3">
                <div class="card-header">Informații Categorie</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Denumire" class="control-label"></label>
                        <input asp-for="Denumire" class="form-control" placeholder="Ex: Ficțiune, Științe, Istorie..." />
                        <span asp-validation-for="Denumire" class="text-danger"></span>
                        <small class="form-text text-muted">Denumirea categoriei pentru clasificarea cărților.</small>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Descriere" class="control-label"></label>
                        <textarea asp-for="Descriere" class="form-control" rows="4" 
                                  placeholder="Descrierea categoriei și tipurile de cărți care aparțin acestei categorii..."></textarea>
                        <span asp-validation-for="Descriere" class="text-danger"></span>
                        <small class="form-text text-muted">Descrierea detaliată a categoriei (maxim 500 caractere).</small>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anulează</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Ghid completare</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-info-circle text-info"></i> <strong>Denumire:</strong> Numele categoriei (ex: "Ficțiune românească")</li>
                    <li><i class="fas fa-file-alt text-info"></i> <strong>Descriere:</strong> Explicație detaliată a categoriei</li>
                    <li><i class="fas fa-tags text-info"></i> <strong>Clasificare:</strong> Ajută la organizarea cărților</li>
                </ul>
                
                <div class="alert alert-info mt-3">
                    <small><i class="fas fa-lightbulb"></i> <strong>Exemple:</strong> Ficțiune, Non-ficțiune, Științe exacte, Istorie, Poezie, Dramaturgie</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}