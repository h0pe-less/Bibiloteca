
@{
    ViewData["Title"] = "Search";
}

<link rel="stylesheet" href="~/css/searchstyle.css" />

<div class="main-container">
    <div class="search-bar">
        <div class="search-container">
            <input type="text" placeholder="Search for books...">
            <button class="search-button">
                <img src="https://cdn-icons-png.flaticon.com/512/149/149852.png" alt="Search">
            </button>
        </div>
    </div>

    <div class="search-tooltip">
        <h1 onclick="clearFilters()">Clear filters</h1>
        <div class="pagination-info">Showing 10 of 100</div>
        <div class="sort-options">
            <span>Sort by:</span>
            <select>
                <option>Relevance</option>
                <option>Newest</option>
                <option>Oldest</option>
                <option>Title A-Z</option>
                <option>Title Z-A</option>
            </select>
        </div>
    </div>

    <div class="search-results">
        <div class="book-grid">
            <!--book-card cherez foreach kakoi to ebnuti-->
            <div class="book-card">
                <div class="book-cover">
                    <img src="/images/libanimation.jpg" alt="Book cover">
                </div>
