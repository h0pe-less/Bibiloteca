@model localLib.Models.Editura

@{
    ViewData["Title"] = "Creare Editură";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Adaugă Editură Nouă</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-3">
                <div class="card-header">Informații Editură</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Denumire" class="control-label"></label>
                        <input asp-for="Denumire" class="form-control" placeholder="Ex: Humanitas, Polirom, Cartea Românească..." />
                        <span asp-validation-for="Denumire" class="text-danger"></span>
                        <small class="form-text text-muted">Denumirea completă a editurii care publică cărțile.</small>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anulează</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Ghid completare</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-info-circle text-info"></i> <strong>Denumire Editura:</strong> Numele complet al editurii</li>
                    <li><i class="fas fa-building text-info"></i> <strong>Identificare:</strong> Utilizați denumirea oficială</li>
                    <li><i class="fas fa-book text-info"></i> <strong>Organizare:</strong> Editurile ajută la catalogarea cărților</li>
                </ul>
                
                <div class="alert alert-info mt-3">
                    <small><i class="fas fa-lightbulb"></i> <strong>Exemple:</strong> Humanitas, Polirom, Cartea Românească, Nemira, Corint</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}